<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- 图片-->
        <ImageView
            android:id="@+id/discover_frg_hot_frg_pic"
            android:src="@mipmap/view_menu_left_home"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"/>

    </FrameLayout>

    <TextView
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/discover_frg_hot_frg_tv_title"
        android:layout_toRightOf="@id/frameLayout"
        android:layout_marginLeft="8dp"
        android:text="超简单步骤，两分钟扎出漂亮马尾辫!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
       />

    <TextView
        android:id="@+id/discover_frg_hot_frg_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mini美人"
        android:layout_marginLeft="8dp"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_alignLeft="@+id/discover_frg_hot_frg_tv_title"
        android:layout_alignStart="@+id/discover_frg_hot_frg_tv_title"/>

    <TextView
        android:id="@+id/discover_frg_hot_frg_tv_watchNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="101548"
        android:drawableLeft="@mipmap/view_video_visit"
        android:layout_alignBottom="@+id/discover_frg_hot_frg_tv_nickName"
        android:layout_alignParentRight="true"
        android:drawablePadding="3dp"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:background="#CCC"/>


</RelativeLayout>