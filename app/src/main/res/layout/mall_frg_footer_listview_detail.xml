<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/mall_frg_special_goods_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/mall_frg_footer_tv_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/mall_frg_listView"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/vertical_line"
            android:drawablePadding="8dp"
            android:text="xxx"/>

        <View
            android:id="@+id/mall_frg_footer_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mall_frg_footer_tv_title"
            android:background="#CCC"/>
        >
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mall_frg_special_goods_relativeLayout">

        <ImageView

            android:id="@+id/mall_frg_footer_listView_detail_iv"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/beautiful"/>

        <TextView

            android:id="@+id/mall_frg_footer_listView_detail_tv_now_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_iv"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="desc"
            android:textColor="#bb302d30"/>


        <TextView
            android:id="@+id/mall_frg_footer_listView_detail_tv_now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_frg_footer_listView_detail_tv_now_desc"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_iv"
            android:text="now price"
            android:textColor="#f0f"/>


        <TextView
            android:id="@+id/mall_frg_footer_listView_detail_tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_frg_footer_listView_detail_tv_now_desc"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_tv_now_price"
            android:text="old price"
            android:textColor="#96462d46"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCC"/>
        >

    </RelativeLayout>


</RelativeLayout>