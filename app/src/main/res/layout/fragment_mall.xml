<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.fantastic3.thebeautiful.fragments.MallFragment">


    <ListView
        android:id="@+id/mall_frg_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <!--FloatingActionButton -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mall_frg_FAB_gotop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_shop_index_gotop"
        android:layout_margin="0dp"
        android:layout_above="@+id/mall_frg_FAB_car"
        android:layout_alignLeft="@+id/mall_frg_FAB_car"
        android:layout_alignStart="@+id/mall_frg_FAB_car"
        app:backgroundTint="#282929"
        app:rippleColor="#33728dff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:borderWidth="0dp"

       />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mall_frg_FAB_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/btn_shop_index_car"
        android:layout_margin="10dp"
        app:backgroundTint="#282929"
        app:rippleColor="#33728dff"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:borderWidth="0dp"
        />








</RelativeLayout>
