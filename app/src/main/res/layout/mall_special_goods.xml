<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/mall_frg_footer_tv_title"
        android:text="xxx"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <View
        android:id="@+id/mall_frg_footer_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_below="@id/mall_frg_footer_tv_title"/>


    <RelativeLayout
                    android:layout_below="@id/mall_frg_footer_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:background="@color/white">

        <ImageView
            android:id="@+id/mall_frg_footer_listView_detail_iv"
            android:src="@mipmap/beautiful"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/mall_frg_footer_listView_detail_tv_now_desc"
            android:text="desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bb302d30"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_iv"/>


        <TextView
            android:id="@+id/mall_frg_footer_listView_detail_tv_now_price"
            android:text="now price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mall_frg_footer_listView_detail_tv_now_desc"
            android:layout_marginTop="30dp"
            android:textColor="#f0f"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_iv"/>


        <TextView
            android:id="@+id/mall_frg_footer_listView_detail_tv_old_price"
            android:text="old price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:textColor="#96462d46"
            android:layout_below="@id/mall_frg_footer_listView_detail_tv_now_desc"
            android:layout_toRightOf="@id/mall_frg_footer_listView_detail_tv_now_price"/>





    </RelativeLayout>




</RelativeLayout>