<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fantastic3.thebeautiful.activites.MallFooterActivity">

    <RelativeLayout
        android:id="@+id/mallFooter_aty_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/mallFooter_aty_tv_back"
            android:background="@drawable/btn_wd_common_back"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/mallFooter_aty_tv_title"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textColor="#80d41892"
            android:ellipsize="end"
            android:textSize="20dp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="xxxxx"/>

        <TextView
            android:id="@+id/mallFooter_aty_tv_back2"
            android:text="返回首页"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="#80d41892"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/mallFooter_aty_relativeLayout"
        android:id="@+id/mallFooter_aty_seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/progressbar"
       />

    <WebView
        android:id="@+id/mallFooter_aty_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mallFooter_aty_seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />



</RelativeLayout>
