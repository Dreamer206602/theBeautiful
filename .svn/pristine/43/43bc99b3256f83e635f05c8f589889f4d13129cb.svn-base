<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context="com.fantastic3.thebeautiful.activites.LoginActivity">
<RelativeLayout
    android:background="#fff"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <ImageView
        android:src="@drawable/btn_wd_common_back"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:textSize="18dp"
        android:textColor="#ff96b5"
        android:text="用户登录"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
   <EditText
       android:textColorHint="#fff"
       android:drawablePadding="5dp"
       android:textColor="#fff"
       android:hint="请输入手机号"
       android:padding="10dp"
       android:drawableLeft="@drawable/view_reg_phone"
       android:background="@drawable/edit_bg"
       android:layout_marginRight="40dp"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="30dp"
       android:layout_width="match_parent"
       android:layout_height="45dp" />
    <EditText
        android:textColorHint="#fff"
        android:drawablePadding="5dp"
        android:hint="请输入登录密码"
        android:padding="10dp"
        android:drawableLeft="@drawable/view_reg_password"
        android:background="@drawable/edit_bg"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <Button
        android:id="@+id/login_btn"
        android:textColor="#fff"
        android:text="登录"
        android:textSize="16dp"
        android:background="@drawable/login_bg"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <Button
        android:onClick="register_click"
        android:id="@+id/register_btn"
        android:textColor="#5587f2"
        android:text="注册"
        android:textSize="16dp"
        android:background="@drawable/register_bg"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView
           android:layout_weight="1"
           android:src="@drawable/view_login_qq"
           android:layout_width="0dp"
           android:layout_height="70dp" />
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/view_login_wx"
            android:layout_width="0dp"
            android:layout_height="70dp" />
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/view_login_sina"
            android:layout_width="0dp"
            android:layout_height="70dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:onClick="gethave_password_click"
            android:text="找回密码"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
